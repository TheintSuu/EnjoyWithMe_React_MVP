<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorFragment"
    android:layout_height="wrap_content"
   >
    <TextView
        android:id="@+id/tvStoreLineTitle"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_alignParentStart="true"
        style="@style/GrayText"
        android:textColor="#5A5D5A"
        android:layout_height="wrap_content"
       android:text="STORYLINE"
        />

    <TextView
        android:id="@+id/tvStoryLines"
        android:layout_width="match_parent"
        android:maxEms="3"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvStoreLineTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginLeft="0dp"
        android:paddingStart="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:text="Play Trailer Play Trailer Play TrailerPlay Trailer Play TrailerPlay Trailer Play TrailerPlay Trailer Play TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay TrailerPlay Trailer Play TrailerPlay TrailerPlay TrailerPlay TrailerPlay Trailer  "
        android:textColor="#fff" />

    <TextView
        android:layout_below="@id/tvStoryLines"
        android:layout_marginTop="@dimen/margin_medium_3"
        android:id="@+id/btnTrailer"
        android:layout_width="wrap_content"
        android:background="@drawable/button_background"
        android:layout_alignParentStart="true"
        android:layout_height="@dimen/margin_xlarge"
        android:gravity="start|center_vertical"
        android:paddingTop="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium_3"
        android:layout_marginLeft="@dimen/margin_medium"
        android:drawablePadding="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_medium_2"
        android:textColor="@color/colorWhite"
        android:paddingBottom="@dimen/margin_small"
        android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
        android:text="Play Trailer"
        />

    <TextView
        android:id="@+id/btnRating"
        android:paddingBottom="@dimen/margin_small"
        android:layout_width="wrap_content"
        android:layout_toEndOf="@id/btnTrailer"
        android:background="@drawable/btn_rating"
        android:layout_below="@id/tvStoryLines"
        android:paddingTop="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium_3"
        android:layout_alignTop="@id/btnTrailer"
        android:gravity="start|center_vertical"
        android:drawablePadding="@dimen/margin_medium"
        android:paddingRight="@dimen/margin_medium_3"
        android:paddingStart="@dimen/margin_small"
        android:layout_height="@dimen/margin_xlarge"
        android:drawableLeft="@drawable/ic_baseline_star_24"
        android:textColor="#fff"
        android:text="Rating Movie"
        />

</RelativeLayout>
