<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:layout_margin="@dimen/margin_medium"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    android:background="#1D2533"
    app:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:layout_margin="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivCreatorImage"
            android:src="@drawable/yibo"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="250dp" />



        <TextView
            android:id="@+id/tvCreatorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leonardo DiCaprio"
            android:textSize="14sp"
            android:layout_above="@id/tvDate"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/margin_medium"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            />

        <ImageView
            android:id="@+id/btnLike"
            style="@style/GrayText"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignStart="@id/tvCreatorName"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:src="@drawable/ic_baseline_thumb_up_24"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/GrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvCreatorName"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="17dp"
            android:layout_toEndOf="@id/btnLike"
            android:text="You Like this MOVIES"
            android:textSize="10sp" />


    </RelativeLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_favorite_24"
        android:id="@+id/btnFavourite"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_marginRight="@dimen/margin_medium_3"
        android:layout_gravity="top|end"
        android:elevation="@dimen/margin_small"
        />


</FrameLayout>
