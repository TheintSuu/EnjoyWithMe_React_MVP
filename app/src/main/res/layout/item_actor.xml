<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="275dp"
    android:layout_margin="@dimen/margin_medium_2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/ivActorImage"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:scaleType="centerCrop"
            android:src="@drawable/yibo" />

        <TextView
            android:id="@+id/tvActorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvDate"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:fontFamily="@font/carmen_sans_bold"
            android:text="Leonardo DiCaprio"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnLike"
            style="@style/GrayText"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignStart="@id/tvActorName"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginRight="@dimen/margin_medium_2"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_baseline_thumb_up_24"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvDate"
            style="@style/GrayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tvActorName"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/btnLike"
            android:text="You Like this MOVIES"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/btnFavourite"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="top|end"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="@dimen/margin_medium"
            android:elevation="@dimen/margin_small"
            android:paddingHorizontal="@dimen/margin_medium"
            android:src="@drawable/ic_baseline_favorite_24" />


    </RelativeLayout>


</RelativeLayout>
